@model Sport_E.Controllers.EventRate
@{
    ViewBag.Title = "Rate";
}
<h2>@Html.DisplayFor(model => model.EventName)</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rate your experience with this event</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Rating, new List<SelectListItem>
                 {
                        new SelectListItem() {Text = "1 (Bad)", Value="1"},
                        new SelectListItem() {Text = "2 (Below Average)", Value="2"},
                        new SelectListItem() {Text = "3 (Satisfactory)", Value="3"},
                        new SelectListItem() {Text = "4 (Good)", Value="4"},
                        new SelectListItem() {Text = "5 (Excellent)", Value="5"}
                }, htmlAttributes: new { @class = "form-control" })
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
